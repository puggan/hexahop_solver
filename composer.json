        }
    ],
    "autoload": {
        "psr-4": {
            "Puggan\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*"
    },
    "scripts": {
        "lint": "vendor/bin/phplint --warning --quiet . --exclude=vendor",
        "phps": "vendor/bin/phpstan analyse src/",
        "unit": "vendor/bin/phpunit test/",
