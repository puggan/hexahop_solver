            "vendor/bin/phplint --warning --quiet . --exclude=vendor",
            "vendor/bin/phpunit test/",
            "vendor/bin/phpstan analyse src/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "overtrue/phplint": "^5.0",
        "phpstan/phpstan": "^1.5",
        "jetbrains/phpstorm-attributes": "^1.0"
    }
